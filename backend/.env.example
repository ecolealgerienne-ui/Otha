# =================================
# DATABASE
# =================================
DATABASE_URL="postgresql://user:password@localhost:5432/vegece?schema=public"

# =================================
# JWT SECRETS (min 16 characters)
# =================================
JWT_ACCESS_SECRET="your-super-secret-access-key-min-16-chars"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-min-16-chars"
JWT_ACCESS_TTL="30d"
JWT_REFRESH_TTL="60d"

# =================================
# EMAIL SMTP CONFIGURATION
# =================================
# For Gmail:
#   1. Enable 2-Factor Authentication on your Google account
#   2. Go to https://myaccount.google.com/apppasswords
#   3. Create an App Password for "Mail" and "Other (Custom name)"
#   4. Use that 16-character password as SMTP_PASS
#
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-16-char-app-password"

# =================================
# OPTIONAL
# =================================
NODE_ENV="development"
PORT=3000
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"
